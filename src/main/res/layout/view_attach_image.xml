<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.sup.dev.android.views.views.layouts.LayoutCorned
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:LayoutCorned_cornedSize="6dp"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/vImage"
            android:layout_width="112dp"
            android:layout_height="86dp"
            android:scaleType="centerCrop"/>

    </com.sup.dev.android.views.views.layouts.LayoutCorned>

    <com.sup.dev.android.views.views.ViewIcon
        android:id="@+id/vRemove"
        style="@style/Icon.12"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_clear_white_18dp"
        app:ViewIcon_background="@color/grey_700"/>

    <com.sup.dev.android.views.views.ViewIcon
        android:id="@+id/vCrop"
        style="@style/Icon.12"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_crop_white_18dp"
        app:ViewIcon_background="@color/grey_700"/>

</FrameLayout>