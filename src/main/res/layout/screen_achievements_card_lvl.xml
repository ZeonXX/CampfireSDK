<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingBottom="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.sup.dev.android.views.views.layouts.LayoutCorned
                android:id="@+id/vCorned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:LayoutCorned_chipMode="true">

                <TextView
                    android:id="@+id/vTextLvl"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/green_700"
                    android:textSize="18sp"/>
            </com.sup.dev.android.views.views.layouts.LayoutCorned>

            <TextView
                android:id="@+id/vKarma"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="100"/>


        </LinearLayout>

        <TextView
            android:id="@+id/vText"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Some random text. And more text. Some random text. And more text. "/>

    </LinearLayout>

</FrameLayout>