<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        style="@style/Scroll.Splash">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vParamsTitle"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"/>

            <com.sup.dev.android.views.views.layouts.LayoutFlow
                android:id="@+id/vFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:LayoutFlow_horizontal="8dp"
                app:LayoutFlow_vertical="8dp"/>

            <com.sup.dev.android.views.settings.SettingsField
                android:id="@+id/vComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textAutoComplete"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vCancel"
                    style="@style/Button.Text"
                    android:layout_marginEnd="8dp"/>

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vEnter"
                    style="@style/Button.Text"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>
