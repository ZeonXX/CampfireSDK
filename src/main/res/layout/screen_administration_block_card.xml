<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorSurface"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.sup.dev.android.views.views.ViewAvatar
                android:id="@+id/vFandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.sup.dev.android.views.views.ViewAvatarTitle
                android:id="@+id/vAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-14dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/vInfo"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.sup.dev.android.views.views.ViewButton
                android:id="@+id/vCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:textColor="@color/red_700"
                style="@style/Button.Text"/>

            <com.sup.dev.android.views.views.ViewButton
                android:id="@+id/vAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:textColor="@color/green_700"
                style="@style/Button.Text"/>


        </FrameLayout>

    </LinearLayout>



</FrameLayout>