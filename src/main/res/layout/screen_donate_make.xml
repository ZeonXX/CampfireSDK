<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Root.Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/AppBar.Transparent">

        <androidx.appcompat.widget.Toolbar
            style="@style/Toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        style="@style/Scroll"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/vImage_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/vText_1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/vImage_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vText_2"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/vText_3"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/vDonateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayout.Outlined"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/vSum"
                            style="@style/Field"
                            android:inputType="numberDecimal"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vIcon_yandex"
                        style="@style/Icon.18"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        app:ViewIcon_secondaryColor="@color/focus" />

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vIcon_card"
                        style="@style/Icon.18"
                        android:layout_gravity="center"
                        app:ViewIcon_secondaryColor="@color/focus" />

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vIcon_phone"
                        style="@style/Icon.18"
                        android:layout_gravity="center"
                        app:ViewIcon_secondaryColor="@color/focus" />

                </LinearLayout>

                <com.sup.dev.android.views.views.ViewText
                    android:id="@+id/vMobileAlert"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/red_700" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout.Outlined"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/vComment"
                        style="@style/Field"
                        android:inputType="textCapSentences"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vButton"
                    style="@style/Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/vMessageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?colorPrimary"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/vMessage"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>