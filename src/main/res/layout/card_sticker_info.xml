<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:id="@+id/vRootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorContentScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="2dp">

                <com.sup.dev.android.views.views.ViewImagesSquare
                    android:id="@+id/vImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/vProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vTitle"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/vReports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_security_white_24dp"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:background="?selectableItemBackground"
                    android:padding="6dp"/>

            </LinearLayout>

        </LinearLayout>

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vMenu"
            style="@style/Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_more_vert_white_18dp" />

    </FrameLayout>

</FrameLayout>
