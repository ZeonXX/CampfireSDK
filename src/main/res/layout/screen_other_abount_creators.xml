<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Root.Content">


    <com.google.android.material.appbar.AppBarLayout style="@style/AppBar">

        <androidx.appcompat.widget.Toolbar
            style="@style/Toolbar">

            <com.sup.dev.android.views.views.ViewIcon
                android:id="@+id/vCopyLink"
                style="@style/Icon.Toolbar.Filtered"
                android:src="@drawable/ic_insert_link_white_24dp" />


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView style="@style/Scroll">

        <LinearLayout
            android:id="@+id/vSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.sup.dev.android.views.views.ViewAvatarTitle
                    android:id="@+id/vPhotoZeon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"/>

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vMoreZeon"
                    style="@style/Icon.18"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/ic_more_vert_white_24dp" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.sup.dev.android.views.views.ViewAvatarTitle
                    android:id="@+id/vPhotoSaynok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"/>

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vMoreSaynok"
                    style="@style/Icon.18"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/ic_more_vert_white_24dp" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.sup.dev.android.views.views.ViewAvatarTitle
                    android:id="@+id/vPhotoEgor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"/>

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vMoreEgor"
                    style="@style/Icon.18"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/ic_more_vert_white_24dp" />


            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.sup.dev.android.views.views.ViewAvatarTitle
                    android:id="@+id/vPhotoTurbo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vMoreTurbo"
                    style="@style/Icon.18"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/ic_more_vert_white_24dp" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.sup.dev.android.views.views.ViewAvatarTitle
                    android:id="@+id/vPhotoZYMixx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vMoreZYMixx"
                    style="@style/Icon.18"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/ic_more_vert_white_24dp" />

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>