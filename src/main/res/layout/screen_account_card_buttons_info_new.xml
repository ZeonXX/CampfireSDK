<?xml version="1.0" encoding="utf-8"?>
<com.sup.dev.android.views.views.layouts.LayoutCorned xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vLayoutCorned"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="12dp"
    android:background="?colorSurface"
    app:LayoutCorned_cornedSize="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sup.dev.android.views.settings.SettingsMini
            android:id="@+id/vKarmaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Settings_icon="@drawable/ic_star_white_24dp"
            app:Settings_icon_filter="?colorOnPrimaryIcons"
            app:Settings_lineVisible="false"/>

        <com.sup.dev.android.views.settings.SettingsMini
            android:id="@+id/vAchievementsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Settings_icon="@drawable/ic_star_white_24dp"
            app:Settings_icon_filter="?colorOnPrimaryIcons"
            app:Settings_lineVisible="false"/>

        <com.sup.dev.android.views.settings.SettingsMini
            android:id="@+id/vPunishmentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Settings_icon="@drawable/ic_security_white_24dp"
            app:Settings_icon_filter="?colorOnPrimaryIcons"
            app:Settings_lineVisible="false"/>

        <com.sup.dev.android.views.settings.SettingsMini
            android:id="@+id/vFollowersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Settings_icon="@drawable/ic_group_white_24dp"
            app:Settings_icon_filter="?colorOnPrimaryIcons"
            app:Settings_lineVisible="false" />

        <com.sup.dev.android.views.settings.SettingsMini
            android:id="@+id/vFollowsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Settings_icon="@drawable/ic_group_white_24dp"
            app:Settings_icon_filter="?colorOnPrimaryIcons"
            app:Settings_lineVisible="false"/>

        <LinearLayout
            android:id="@+id/vContainerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sup.dev.android.views.settings.SettingsMini
                android:id="@+id/vFandoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Settings_icon="@drawable/ic_account_balance_white_24dp"
                app:Settings_icon_filter="?colorOnPrimaryIcons"
                app:Settings_lineVisible="false"/>

            <com.sup.dev.android.views.settings.SettingsMini
                android:id="@+id/vModeratorButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Settings_icon="@drawable/ic_security_white_24dp"
                app:Settings_icon_filter="?colorOnPrimaryIcons"
                app:Settings_lineVisible="false" />

            <com.sup.dev.android.views.settings.SettingsMini
                android:id="@+id/vRatesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Settings_icon="@drawable/ic_thumbs_up_down_white_24dp"
                app:Settings_icon_filter="?colorOnPrimaryIcons"
                app:Settings_lineVisible="false"/>

            <com.sup.dev.android.views.settings.SettingsMini
                android:id="@+id/vStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Settings_icon="@drawable/ic_spa_white_24dp"
                app:Settings_icon_filter="?colorOnPrimaryIcons"
                app:Settings_lineVisible="false" />

            <com.sup.dev.android.views.settings.SettingsMini
                android:id="@+id/vStickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Settings_icon="@drawable/ic_mood_white_24dp"
                app:Settings_icon_filter="?colorOnPrimaryIcons"
                app:Settings_lineVisible="false" />

            <com.sup.dev.android.views.settings.SettingsMini
                android:id="@+id/vBlackList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Settings_icon="@drawable/ic_warning_white_24dp"
                app:Settings_icon_filter="?colorOnPrimaryIcons"
                app:Settings_lineVisible="false" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/vShowMoreTouch"
            style="@style/Touchable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/vShowMore"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />


        </FrameLayout>

    </LinearLayout>

</com.sup.dev.android.views.views.layouts.LayoutCorned>

